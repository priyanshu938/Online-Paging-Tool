<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Paging</title>
    <link rel="stylesheet" href="reviews.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>

  <body>
    <h1 class="header" data-aos="fade-down">Reviews</h1>
    <br /><br />
    <div class="comments-div" data-aos="fade-down">
      <% for(var i=comments.length-1;i>=0;--i){ %>
      <default class="default">
        <img class="dp-icon" src="dp icon.png" alt="" srcset="" />
        <p>
          <b class="comment-name"> <%=comments[i].name %> : </b>
          <%=comments[i].review %>
        </p>
        <p>
          <b class="rating">Rating :</b>

          <% for(var j=1;j<=parseInt(comments[i].rating);j++){ %> ‚≠ê <%}%>
        </p>
        <br /><br />
        <disp_time class="comment-time">
          <%=comments[i].time %>
        </disp_time> </default
      ><br /><br /><br /><br /><br />
      <hr />
      <br /><br /><br /><br /><br />
      <% } %>
    </div>
    <br /><br /><br />
    <choose>
      <form action="/reviews" method="POST" autocomplete="off">
        <br /><br />
        <div class="buttons">
          <button
            class="btn green"
            type="submit"
            name="comment"
            data-aos="fade-up"
          >
            Write a Comment
          </button>
          <button class="btn red" name="back" type="submit" data-aos="fade-up">
            Home
          </button>
        </div>
      </form>
    </choose>
    <br /><br />
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>
